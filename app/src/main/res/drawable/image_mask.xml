<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape (for the CardView) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0" /> <!-- Replace with your desired background color -->
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Image with one corner being displayed -->
    <item android:gravity="top|end">
        <bitmap
        android:gravity="center"
        android:scaleType="centerCrop" />
    </item>

</layer-list>
