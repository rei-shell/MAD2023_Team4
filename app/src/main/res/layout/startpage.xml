<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/constraint"

 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rectimage"
            android:layout_width="300dp"
            android:layout_height="475dp"
            android:layout_centerInParent="true"
            android:radius="10dp"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/rexipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/rectimage"
            android:layout_alignTop="@id/rectimage"
            android:layout_alignEnd="@id/rectimage"
            android:layout_alignBottom="@id/rectimage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"

            android:fontFamily="@font/kalam_bold"
            android:text="REXIPE"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="80sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Login"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_marginTop="150dp"
            android:layout_marginStart="35dp"
            android:layout_alignStart="@id/rexipe"
            android:layout_alignTop="@id/rexipe"

            android:fontFamily="@font/kalam_bold"
            android:text="Login"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SignUp"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_marginTop="125dp"
            android:layout_alignStart="@id/Login"
            android:layout_alignTop="@id/Login"


            android:fontFamily="@font/kalam_bold"
            android:text="SignUp"
            android:textSize="25sp"
            android:textStyle="bold"

            />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


