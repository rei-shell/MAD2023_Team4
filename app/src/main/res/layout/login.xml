<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/rectimage"
            android:src="@drawable/rectangle"
            android:layout_centerInParent="true"
            android:contentDescription="background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/rectimage"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/kalam_bold"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="25sp"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_alignStart="@id/rectimage"
            android:layout_alignTop="@id/rectimage"
            android:layout_marginTop="125dp"
            android:layout_marginStart="55dp"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="25sp"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_alignStart="@id/rectimage"
            android:layout_alignTop="@id/rectimage"
            android:layout_marginTop="185dp"
            android:layout_marginStart="55dp"/>

        <EditText
            android:id="@+id/usernametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:inputType="text"
            android:text="xuan_1"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_alignStart="@id/rectimage"
            android:layout_alignTop="@id/rectimage"
            android:layout_marginTop="120dp"
            android:layout_marginStart="170dp"/>

        <EditText
            android:id="@+id/passwordtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:inputType="textVisiblePassword"
            android:text="NPict123"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_alignStart="@id/rectimage"
            android:layout_alignTop="@id/rectimage"
            android:layout_marginTop="185dp"
            android:layout_marginStart="170dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/loginbtn"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/rectimage"
            android:layout_marginBottom="35dp"
            />

        <CheckBox
            android:id="@+id/rememberme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textSize="15sp"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/loginbtn"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textSize="13sp"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/rectimage"
            android:layout_marginBottom="13dp"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>