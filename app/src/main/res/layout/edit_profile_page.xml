<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScreenBackground"
    android:id="@+id/constraint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        >
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/twotone_arrow_back_24"
            style="@style/TIntColor"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:fontFamily="@font/kalam_regular"
            style="@style/TextColor"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/header"
        android:id="@+id/profile_img">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            style="@style/TIntColor"
            android:src="@drawable/outline_person_24" />


    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/usernameLayout"
        app:startIconDrawable="@drawable/outline_person_24"
        android:hint="Username"
        app:endIconMode="clear_text"
        app:helperText="Required*"
        app:helperTextTextColor="#DD0000"
        app:errorEnabled="true"
        style="@style/BaseStyle"


        android:layout_marginTop="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/profile_img">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BaseStyle"
            android:inputType="text"
            android:id="@+id/usernameEditText"
            android:fontFamily="@font/kalam_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@+id/usernameLayout"
        android:id="@+id/edit_button"
        android:layout_centerHorizontal="true"

        android:text="Save"
        android:fontFamily="@font/kalam_regular"
        android:textSize="30sp"
        style="@style/YourButtonStyle"
        />
</RelativeLayout>
