<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload_Recipe"
    android:orientation="vertical"
    style="@style/ScreenBackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            style="@style/TextHeaderColor">
            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/twotone_arrow_back_24"
                style="@style/TIntColor"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Recipe"
                android:fontFamily="@font/kalam_regular"
                style="@style/TextColor"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/savebtn"
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:text="Save"
                android:fontFamily="@font/kalam_bold"
                style="@style/YourButtonStyle"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/texttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_alignTop="@+id/header"
            android:layout_marginTop="90dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/kalam_bold"
            android:textSize="30sp"
            style="@style/TextColor"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/rexipename"
            android:hint="Your Recipe Name"
            app:endIconMode="clear_text"
            app:helperText="Required*"
            app:helperTextTextColor="#DD0000"
            app:errorEnabled="true"

            style="@style/BaseStyle"
            app:errorTextColor="@color/red"
            app:boxStrokeErrorColor="@color/red"

            android:layout_alignTop="@id/texttitle"
            android:layout_alignStart="@+id/texttitle"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="25dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseStyle"
                android:inputType="text"
                android:fontFamily="@font/kalam_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rexipename"
            android:id="@+id/phototext"
            android:text="Upload Photo"
            android:layout_marginTop="90dp"
            android:textSize="30sp"
            android:layout_alignStart="@+id/texttitle"
            android:fontFamily="@font/kalam_bold"
            style="@style/TextColor"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add photo"
            android:layout_alignStart="@+id/phototext"
            android:layout_alignTop="@+id/phototext"
            android:layout_marginTop="50dp"
            android:layout_alignEnd="@+id/rexipename"
            android:clickable="true"
            style="@style/BaseStyle"
            app:startIconDrawable="@drawable/outline_add_photo_alternate_24"
            android:focusable="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:textSize="20sp"
                android:fontFamily="@font/kalam_regular"
                style="@style/BaseStyle"
                android:focusable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/decriptiontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_alignStart="@+id/phototext"
            android:layout_alignTop="@+id/addphoto"
            android:layout_marginTop="100dp"
            android:textSize="30sp"
            android:fontFamily="@font/kalam_bold"
            style="@style/TextColor"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/recipedescription"
            android:hint="Introduce Your Recipe"
            app:endIconMode="clear_text"

            style="@style/BaseStyle"

            android:layout_alignTop="@id/decriptiontxt"
            android:layout_alignStart="@+id/texttitle"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="25dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseStyle"
                android:inputType="textMultiLine"
                android:fontFamily="@font/kalam_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="30sp"
            android:fontFamily="@font/kalam_bold"
            style="@style/TextColor"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/recipedescription" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Recipe Category"
            app:endIconMode="clear_text"
            style="@style/BaseStyle"
            android:layout_below="@+id/categoryTxt"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseStyle"
                android:fontFamily="@font/kalam_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/ppl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/category"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/personsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Persons"
                android:textSize="30sp"
                android:fontFamily="@font/kalam_bold"
                style="@style/TextColor" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/numberOfPersons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                style="@style/BaseStyle"
                android:layout_weight="1"
                android:layout_marginStart="30dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BaseStyle"
                    android:inputType="number"
                    android:fontFamily="@font/kalam_regular" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ingredientstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="30sp"
            android:fontFamily="@font/kalam_bold"
            style="@style/TextColor"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/ppl" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Ingredients"
            android:layout_alignStart="@+id/ingredientstxt"
            android:layout_alignTop="@+id/ingredientstxt"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="25dp"
            style="@style/BaseStyle"
            android:focusable="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseStyle"
                android:inputType="textMultiLine"
                android:fontFamily="@font/kalam_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/stepsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Steps"
            android:textSize="30sp"
            android:fontFamily="@font/kalam_bold"
            style="@style/TextColor"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/ingredients" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipeSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Recipe Steps"
            android:layout_alignStart="@+id/stepsTxt"
            android:layout_alignTop="@+id/stepsTxt"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="25dp"
            style="@style/BaseStyle"
            android:focusable="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BaseStyle"
                android:inputType="textMultiLine"
                android:fontFamily="@font/kalam_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/prep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/recipeSteps">
            <TextView
                android:id="@+id/preparationTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparation Time"
                android:layout_weight="1"
                android:textSize="30sp"
                android:fontFamily="@font/kalam_bold"
                style="@style/TextColor"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/preparationTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/BaseStyle"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BaseStyle"
                    android:inputType="number"
                    android:fontFamily="@font/kalam_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kalam_regular"
                android:text="minutes"
                style="@style/BaseStyle"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/prep">

            <TextView
                android:id="@+id/cookingTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooking Time"
                android:textSize="30sp"
                android:fontFamily="@font/kalam_bold"
                style="@style/TextColor"
                android:layout_weight="1"
                android:layout_marginTop="10dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cookingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                style="@style/BaseStyle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BaseStyle"
                    android:inputType="number"
                    android:fontFamily="@font/kalam_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kalam_regular"
                android:text="minutes"
                style="@style/BaseStyle"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/cooking">
            <TextView
                android:id="@+id/totalTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Time"
                android:textSize="30sp"
                android:layout_weight="1"
                android:fontFamily="@font/kalam_bold"
                style="@style/TextColor"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/totalTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                style="@style/BaseStyle"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/BaseStyle"
                    android:inputType="number"
                    android:fontFamily="@font/kalam_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kalam_regular"
                android:text="minutes"
                style="@style/BaseStyle"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>