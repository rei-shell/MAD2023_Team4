<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_list"
    android:id="@+id/constraint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
       >
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/twotone_arrow_back_24"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/kalam_regular"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/header"
        android:id="@+id/profile_img">

        <ImageView
            android:id="@+id/userpic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/icon" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/profile_img"
        >

        <TextView
            android:id="@+id/username_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kalam_light"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/username_header"
            android:layout_marginTop="30dp"


            android:text="UserName"
            android:textSize="35sp"
            android:fontFamily="@font/kalam_bold"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/username"
        >

        <TextView
            android:id="@+id/email_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kalam_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/email_header"
                android:layout_marginTop="30dp"

                android:layout_weight="1"
                android:text="Email"
                android:textSize="35sp"
                android:fontFamily="@font/kalam_bold"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verifyemail"

                android:text="Verify"
                android:fontFamily="@font/kalam_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@+id/email"
        android:id="@+id/profile_buttons"
        android:padding="16dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Acount"
            android:padding="12dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/kalam_regular"
            android:textSize="20sp"
            android:id="@+id/deleteacct"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:padding="12dp"
            android:fontFamily="@font/kalam_regular"
            android:textSize="20sp"
            android:id="@+id/editacct"
            />

    </LinearLayout>


</RelativeLayout>